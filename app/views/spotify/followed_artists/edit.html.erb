<div class='container mx-auto w-6/12 py-12'>
  <%= form_with model: @followed_artist, url: spotify_followed_artist_path(@followed_artist), method: :put do |form| %>
    <div class="space-y-12">
      <div class="border-b border-gray-900/10 pb-12">
        <h2 class="text-base font-semibold leading-7 text-white">Followed Artist Form</h2>
        <p class="mt-1 text-sm leading-6 text-gray-100">This information will be displayed publicly so be careful what you share.</p>

        <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
          <div class="sm:col-span-4">
            <%= form.label :tag_list, label: "Tag:", class: "block text-sm font-medium leading-6 text-white" %>
            <div class="mt-2">
              <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-white-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-green-spotify sm:max-w-md">
                <%#= form.text_field :tag_list, placeholder: "pop, rock", class: "block flex-1 border-0 bg-transparent py-1.5 pl-1 text-white placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" %>
                <%= form.select :tag_list,
                                options_for_select(["rock", "pop", "grunge", "rap US", "rap FR"], @selected_tags),
                                           { prompt: "Please select one or several values"},
                                           { multiple: true,  class: "block flex-1 border-0 bg-transparent py-1.5 pl-1 text-white placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" }
                %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-6 flex items-center justify-end gap-x-6">
      <%= link_to "Cancel", spotify_followed_artists_path, class: "text-sm font-semibold leading-6 text-gray-100" %>
      <%= form.submit "Submit", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
    </div>
  <% end %>
</div>